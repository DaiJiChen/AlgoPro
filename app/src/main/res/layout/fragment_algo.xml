<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".AlgoFragment">

<!--    android:background="@android:color/transparent"-->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="5dp"
        app:expanded="true">

    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_play_white"
        app:backgroundTint="@color/light_Blue"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="bottom|right|end" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/explanationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bubble Sort"
                android:layout_marginTop="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="3dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <View style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/explanationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text will show here\nxxx\nyyy\n\n\n\n\n\n\n\n\n\nzzz"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/complexityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complexity"
                android:layout_marginTop="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="3dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <View style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/complexityText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text will show here\nxxx\nyyy\n\n\n\n\n\n\n\n\n\nzzz"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/codeDemoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Code Demo"
                android:layout_marginTop="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="3dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <View style="@style/HorizontalLine" />

            <thereisnospon.codeview.CodeView
                android:id="@+id/code_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:clickable="true" />

            <TextView
                android:id="@+id/referenceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="References"
                android:layout_marginTop="30dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="3dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <View style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/referenceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text will show here\nxxx\nyyy\n\n\n\n\n\n\n\n\n\nzzz"
                android:textColor="@color/black"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


